  <body>
	<div class="container-fluid" id='main-div'>
		<header>
			{{ header | raw }}
		</header>
		{{ body | raw }}
		<footer>Copyright Â© W3Schools.com</footer>
	</div>
	<div id='register-dialog' title='Register' style = 'visibility:hidden'>
		<form onsubmit = 'return comparePasswords()' action = 'http://micro-blog.dev/api/register' method='post'>
			<h5 id = 'username'>Username</h5>&nbsp;&nbsp;<input type = 'text' id = 'usernameValue'/><br/>
			<h5 id = 'password'>Password</h5>&nbsp;&nbsp;<input type = 'password' id = 'passwordValue'/><br/>
			<h5 id = 'passwordRepeat'>Repeat Password</h5>&nbsp;&nbsp;<input type = 'password' id = 'passwordRepeatValue'/><br/><br/>
			<h6 id = 'error' style = "visibility:hidden; color:red;">* Please enter correct passwords</h6>
			<input type = 'submit' value = 'Submit'/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<a href = 'http://micro-blog.dev/'><input type = 'button' value = 'Cancel'/></a><br/>
		</form>
	</div>
    
